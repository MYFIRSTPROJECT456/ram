<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>CATEGORY</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
</head>

<body>
<%- include menu.ejs %>
<div class="container">
	<div class="row">
		<div class="col-sm-4 col-xs-4"></div>
		<div class="col-sm-4 col-xs-4">
			<form action="/admin/category/addcatdata" name="formname" method="post" style="border:solid 1px #f3f3f3; padding: 15px;" class="form-inline" onsubmit="return validation();">

			<label>Category Name :</label><input style="width: 232px;" type="text" name="cname" id="cname" class="form-control">
			<p id="error" style="color: red;"></p>
			<br>
			<label>ParentCatName :</label>
			<select style="width: 232px;" name="pid" id="pid" class="form-control" >
				<option value="0">Select ParentCategory</option>
				<% for(var i=0; i < data.length; i++){%>
				<option value="<%=data[i].CATEGORYID%>">
					<%=data[i].CATEGORYNAME%>
				</option>
				<% } %>
			</select>
			<p id="error1" style="color: red;"></p>
			<br>
			<input style="width: 232px;" type="submit" name="" value="ADD NEW CATEGORY" class="btn btn-success btn-lg">
	</form>
		</div>
		<div class="col-sm-4 col-xs-4"></div>
	</div>
</div>
	
	<script  src="/js/jquery.js"></script>
	<script src="/js/bootstrap.js"></script>
	<script src="/js/categoryvalidation.js"></script>
</body>
</html>