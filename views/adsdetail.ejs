<!-- middle section -->


<div class="header">
	<div class="container-fluid" id="middle">
		<div class="row">
			<div id="slide1" class="col-lg-3 col-sm-3 col-xs-3">
				
				 <div class="wrapper">
            <!-- Sidebar Holder -->
            <nav id="sidebar">
               <ul class="list-unstyled components" style="margin-top: 32px;">
                    	<% for(var i=0; i< categorydata[0].length; i++) {%>
					  <li class="dropdown">
					    <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= categorydata[0][i].CATEGORYNAME%>
					    <span class="caret"></span></a>
					    <ul class="dropdown-menu">
					    	<% 
							var categoryid  = categorydata[0][i].CATEGORYID;
							if (categorydata[categoryid]) {
							var newArr = categorydata[categoryid];
							for(var j=0; j< newArr.length; j++) {
							%>
					      <li><a href="/listing"><%= newArr[j].CATEGORYNAME%></a></li>
							<% } 
							}
							%>	
					    </ul>
					 	</li>
					  <% } %>
                </ul>
 
            </nav>
</div>
			</div>
			<div id="main" class="col-lg-9 col-sm-9" style="overflow-x: hidden;">
				<table class="table">
					<% for(var i = 0; i < data.length; i++){%>
					<tr>
						<td>
							<div class="row" id="main1">
								<div style="margin-top: 3px;" class="col-lg-5 col-sm-5 col-xs-6 ImgData zoomin" id="ImgData">
									<img  src="/assets/<%=data[i].ADID%>.<%= data[i].EXT%>" alt="" class="img-responsive img-thumbnail">
								</div>
							<div class="col-lg-7 col-sm-7 col-xs-6 ListData" id="ListData">
						<p><%= data[0].TITLE%></p>
						<p><%= data[0].DISCRIPTION%></p>
						<p id="website"><%= data[0].WEBSITE%></p>
						<p><%= data1[0].MOBILENO%></p>
						<p><%= data1[0].EMAILID%></p>
						
					</div>
							</div>
						</td>
					</tr>
					<% } %>
				</table>
			</div>
